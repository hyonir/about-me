{
  "name": "about-me",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.2.0",
    "concurrently": "^7.3.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start-css": "sass --style=compressed --watch src/sass/styles.scss:public/css/styles.css",
    "start": "react-scripts start",
    "run-start": "concurrently \"npm run start\" \"npm run start-css\"",
    "build": "npm run build-css && npm run build-react",
    "build-react": "react-scripts build",
    "build-css": "sass --style=compressed --no-source-map src/sass/styles.scss:public/css/styles.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
